{
    "name": "joomla/http",
    "type": "joomla-package",
    "description": "Joomla HTTP Package",
    "keywords": ["joomla", "framework", "http"],
    "homepage": "https://github.com/joomla-framework/http",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": "^7.2.5|~8.0.0|~8.1.0",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0",
        "joomla/uri": "^2.0",
        "composer/ca-bundle": "^1.2.11",
        "laminas/laminas-diactoros": "^2.2.2"
    },
    "require-dev": {
        "joomla/coding-standards": "^3.0@dev",
        "joomla/test": "^2.0",
        "phpunit/phpunit": "^8.5|^9.0"
    },
    "suggest": {
        "ext-curl": "To use cURL for HTTP connections"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\Http\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Joomla\\Http\\Tests\\": "Tests/"
        }
    },
    "minimum-stability": "stable",
    "extra": {
        "branch-alias": {
            "dev-2.0-dev": "2.0-dev"
        }
    }
}
